            </td>
            <td>{{first_name}}</a></td>
            <td> {{last_name}}</td>
            <td> {{email}}</a></td>
            <td> {{phone_number}}</a></td>
            <td> {{home_address}}</a></td>
            <!-- ADMIN ONLY BUTTONS -->
            {{!-- <td nowrap>
