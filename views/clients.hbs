<!-- https://materializecss.com/grid.html -->

    <div class="container">

      <h1>List of Clients</h1>

      <blockquote>
        Click on the client name for more details!
        Click on <i class="material-icons tiny">sort</i> to sort by that column, or items in <i
          class="material-icons tiny">filter_list</i> columns to filter by that item.
      </blockquote>
      <div class="row">
        <div class="col l3 s12 "> <i class="left material-icons">sort</i>Sorted by: Last Name</div>
        <div class="col l3 offset-l6 ">
          <!-- Position differently (left) for mobile -->
          <div class="right hide-on-small-only"><i class="left material-icons">filter_list</i>Filter: None</div>
          <div class="left hide-on-med-and-up"><i class="left material-icons">filter_list</i>Filter: None</div>
        </div>

      </div>

      <!-- https://materializecss.com/table.html -->
      <table class="highlight centered responsive-table">
        <thead>
          <tr>
            <!-- USER ONLY-->
            <th><i class="material-icons">star</i>
              <a href="?sort=starred"><i class="material-icons">sort</i></a>
            </th> 

            <th>First Name</th>
            <th>Last Name
              <i class="material-icons">sort</i>
            </th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Payment Type</th>
            <th>Edit/Delete Info</th>
          </tr>


        </thead>

        <tbody>
          {{#each clients}}
          <tr>

            <!-- USER ONLY - Initialize page with appropriate state of button -->

            <td>
              <a onclick='toggleInterest(this, "{{ client_id }}")'
                class="btn-floating btn-small waves-effect waves-light scale-transition scale-in blue"><i
                  class="material-icons">star_border</i></a>
              <!-- If user already "starred" this project, it should be a yellow star -->
              <!-- <a onclick='toggleInterest(this, "{{ project_id }}"))'class="btn-floating btn-small waves-effect waves-light scale-transition scale-in yellow"><iclass="material-icons">star</i></a> -->
            </td>
            <td class="blue-text clickable" onclick="location.href='/clients/{{client_id}}'">{{client_name}}</td>
              <td>{{client_location}}</td>
              <td>{{client_duration}}</td>
            <td> <a href='?filter=type:Main'>{{client_language}}</a></td>
            <td><a href='?filter=date:05-02-2021'>{{client_date_proposed}}</a></td>
            <!-- ADMIN ONLY BUTTONS -->
            <td nowrap>

              <a class="btn-floating btn-small waves-effect waves-light green lighten-1" href="/projects/modify/{{client_id}}"><i
                  class="material-icons">edit</i></a>
              <a class="btn-floating waves-effect waves-light red"
                onclick='confirmDelete("{{client_name}}","{{ client_id}}")'><i class="material-icons">delete</i></a>

            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <a href="/client/create" class="btn-floating btn-large orange fixed-action-btn">
      <i class="large material-icons">create</i>
    </a>

    <script src="/js/event_utils.js"></script>